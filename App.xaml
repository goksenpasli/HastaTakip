            <LinearGradientBrush x:Key="DatagridBackgrounds" StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Offset="1" Color="#FF256999" />
                <GradientStop Color="#FF4FEAC5" />
            </LinearGradientBrush>
            <ControlTemplate x:Key="TintedGroupBox" TargetType="{x:Type GroupBox}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Border
                        Grid.Row="0"
                        BorderBrush="Black"
                        BorderThickness="1"
                        CornerRadius="2,2,0,0">
                        <Border.Background>
                            <LinearGradientBrush MappingMode="RelativeToBoundingBox" StartPoint="0.5,0" EndPoint="0.5,1">
                                <GradientStop Color="White" />
                                <GradientStop Offset="1" Color="#E50074FF" />
                            </LinearGradientBrush>
                        </Border.Background>
                        <ContentPresenter
                            Margin="4"
                            ContentSource="Header"
                            RecognizesAccessKey="True" />
                    </Border>
                    <Border
                        Grid.Row="1"
                        BorderBrush="Black"
                        BorderThickness="1,0,1,3"
                        CornerRadius="0,0,2,2">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                <GradientStop Offset="1" Color="#FF1B5D8B" />
                                <GradientStop Color="#FF48F3CA" />
                            </LinearGradientBrush>
                        </Border.Background>
                        <ContentPresenter Margin="4" />
                    </Border>
                </Grid>
            </ControlTemplate>
            <Style TargetType="TextBlock">
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>
            <Style TargetType="{x:Type TextBox}">
                <!--<Setter Property="FontSize" Value="{Binding RelativeSource={RelativeSource Self},
                                Path=ActualHeight, Converter={StaticResource FontSizeConverter}}" />-->
                <Setter Property="BorderBrush" Value="MediumSeaGreen" />
                <Setter Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush MappingMode="RelativeToBoundingBox" StartPoint="0.5,0" EndPoint="0.5,1">
                            <GradientStop Color="White" />
                            <GradientStop Offset="1" Color="#E50074FF" />
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Style.Triggers>
                    <Trigger Property="Validation.HasError" Value="true">
                        <Setter Property="ToolTip" Value="{Binding (Validation.Errors).CurrentItem.ErrorContent, RelativeSource={RelativeSource Self}}" />
                    </Trigger>
                </Style.Triggers>
            </Style>
            <Style x:Key="BlackErrorTextBox" TargetType="{x:Type TextBox}">
                <!--<Setter Property="FontSize" Value="{Binding RelativeSource={RelativeSource Self},
                                Path=ActualHeight, Converter={StaticResource FontSizeConverter}}" />-->
                <Setter Property="BorderBrush" Value="MediumSeaGreen" />
                <Setter Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush MappingMode="RelativeToBoundingBox" StartPoint="0.5,0" EndPoint="0.5,1">
                            <GradientStop Color="White" />
                            <GradientStop Offset="1" Color="#E50074FF" />
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
                <Setter Property="Validation.ErrorTemplate">
                    <Setter.Value>
                        <ControlTemplate>
                            <DockPanel LastChildFill="True">
                                <Border BorderBrush="Black" BorderThickness="1">
                                    <AdornedElementPlaceholder x:Name="MyAdorner" />
                                </Border>
                            </DockPanel>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Style.Triggers>
                    <Trigger Property="Validation.HasError" Value="true">
                        <Setter Property="ToolTip" Value="{Binding (Validation.Errors).CurrentItem.ErrorContent, RelativeSource={RelativeSource Self}}" />
                    </Trigger>
                </Style.Triggers>
            </Style>
            <Style x:Key="BlueButtonStyle" TargetType="{x:Type Button}">
                <Setter Property="Foreground" Value="Black" />
                <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border
                                x:Name="border"
                                BorderThickness="1"
                                CornerRadius="1"
                                SnapsToDevicePixels="True">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                        <GradientStop Offset="1" Color="#FFAFB6B8" />
                                        <GradientStop Color="#FFDCE2E3" />
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border.BorderBrush>
                                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                        <GradientStop Offset="1" Color="#FF767C7E" />
                                        <GradientStop Color="#FFAFB6B8" />
                                    </LinearGradientBrush>
                                </Border.BorderBrush>
                                <Grid>
                                    <Border
                                        x:Name="InnerHighlight"
                                        Width="Auto"
                                        Height="Auto"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        BorderBrush="#4CFFFFFF"
                                        BorderThickness="1"
                                        SnapsToDevicePixels="True">
                                        <ContentPresenter
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            RecognizesAccessKey="True"
                                            SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                    </Border>
                                    <Border
                                        x:Name="TopHighlight"
                                        BorderBrush="#66FFFFFF"
                                        BorderThickness="0,1,0,0"
                                        SnapsToDevicePixels="True" />
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="TopHighlight" Property="Opacity" Value="0" />
                                    <Setter TargetName="InnerHighlight" Property="Opacity" Value="0.3" />
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush">
                                        <Setter.Value>
                                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                                <GradientStop Offset="1" Color="#FF256999" />
                                                <GradientStop Color="#FF4FEAC5" />
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter TargetName="border" Property="Background">
                                        <Setter.Value>
                                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                                <GradientStop Offset="0" Color="#DED2EEDC" />
                                                <GradientStop Offset="0.5" Color="#DE548DB5" />
                                                <GradientStop Offset="0.6" Color="#DE1E4F70" />
                                                <GradientStop Offset="1" Color="#DE1FD9DF" />
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush">
                                        <Setter.Value>
                                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                                <GradientStop Offset="1" Color="#FF068ACC" />
                                                <GradientStop Color="#FF34B2F1" />
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter TargetName="border" Property="Background">
                                        <Setter.Value>
                                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                                <GradientStop Offset="0" Color="#FF1CA1E3" />
                                                <GradientStop Offset="1" Color="#FF6AD4FF" />
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter TargetName="TopHighlight" Property="Opacity" Value="0" />
                                </Trigger>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush">
                                        <Setter.Value>
                                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                                <GradientStop Offset="1" Color="#FF068ACC" />
                                                <GradientStop Color="#FF34B2F1" />
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsDefault" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush">
                                        <Setter.Value>
                                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                                <GradientStop Offset="1" Color="#FF068ACC" />
                                                <GradientStop Color="#FF34B2F1" />
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style TargetType="{x:Type TabItem}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type TabItem}">
                            <Border
                                x:Name="Border"
                                Margin="2,0"
                                BorderBrush="Gainsboro"
                                BorderThickness="1,1,1,0"
                                CornerRadius="9,9,0,0">
                                <ContentPresenter
                                    x:Name="ContentSite"
                                    Margin="10,2"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    ContentSource="Header" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter TargetName="Border" Property="Background">
                                        <Setter.Value>
                                            <LinearGradientBrush MappingMode="RelativeToBoundingBox" StartPoint="0.5,0" EndPoint="0.5,1">
                                                <GradientStop Color="White" />
                                                <GradientStop Offset="1" Color="#E50074FF" />
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="False">
                                    <Setter TargetName="Border" Property="Background" Value="GhostWhite" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <DataTemplate x:Key="ComboDataTemplate">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column="0"
                        ToolTipService.InitialShowDelay="1000"
                        ToolTipService.ShowDuration="10000">
                        <Run Text="{Binding Adi}" />
                        <Run Text="{Binding Soyadi}" />
                    </TextBlock>
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Image
                            Width="72"
                            Height="72"
                            HorizontalAlignment="Center"
                            Source="{Binding Resim, Converter={StaticResource ByteArrayToImageSource2}}">
                            <Image.CacheMode>
                                <BitmapCache />
                            </Image.CacheMode>
                            <Image.ToolTip>
                                <StackPanel>
                                    <Image
                                        Width="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}, Converter={StaticResource ImageWidthHeightConverter}, Mode=OneWay}"
                                        Height="{Binding Source={x:Static SystemParameters.PrimaryScreenHeight}, Converter={StaticResource ImageWidthHeightConverter}, Mode=OneWay}"
                                        ice:Freeze="True"
                                        Source="{Binding Resim, Converter={StaticResource ByteArrayToImageSource2}}">
                                        <Image.CacheMode>
                                            <BitmapCache />
                                        </Image.CacheMode>
                                    </Image>
                                    <TextBlock Foreground="Red" Text="{Binding Resim.Length, StringFormat='Resim {0} Byte Yer Kaplıyor.', Mode=OneWay}" />
                                </StackPanel>
                            </Image.ToolTip>
                        </Image>
                        <Button
                            x:Name="CmbResimKaydet"
                            Click="CmbResimKaydet_Click"
                            Content="RESİM&#xA;KAYDET"
                            IsTabStop="False"
                            Style="{StaticResource BlueButtonStyle}" />
                    </StackPanel>
                    <TextBlock
                        Grid.Column="2"
                        HorizontalAlignment="Right"
                        Text="{Binding Tc}" />
                </Grid>
            </DataTemplate>

        </ResourceDictionary>
    </Application.Resources>
</Application>